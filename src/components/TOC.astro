---
import type { MarkdownHeading } from 'astro'

interface Props {
    headings: MarkdownHeading[]
}

const { headings } = Astro.props;
---

<aside id="sidebar" class="card">
    <div class="mb-3 flex justify-between items-center">
    <h2>Jump to</h2>
    </div>

    <ul>
    {
        headings.map((heading) => {
        return (
            <li class=`depth-${heading.depth}`>
            <a href={`#${heading.slug}`}>{heading.text}</a>
            </li>
        );
        })
    }
    </ul>

</aside>

<style lang="less">
    /* Eyeballing distances */
    aside :global(button) {
        /* color: var(--elem-neutral); */
        display: block !important;
    }

    li {
        padding: 0.2rem 0;
        border-left: 1px solid var(--elem-neutral);
        padding-left: 2.5rem;
        padding-right: 1rem;
    }

    li.depth-1 {
        padding-left: 1rem;
    }

    li.depth-2 {
        padding-left: 1.8rem;
    }


    ul > ul {
        margin-left: 10px;
    }

    aside.hidden :is(h3, ul) {
        display: none;
    }

    // aside.hidden {
    //     width: auto !important;
    // }

    #sidebar {
    //   display: none; // starting
    //   position: fixed;
    //   width: 300px;
    //   min-height: 100%;
      overflow-wrap: break-word;
    //   overflow-y: auto;
      padding: 1rem;

      font-size: 0.9rem;
      font-weight: 500;

      background-color: rgb(227, 227, 227);

      :is(.dark &) {
        background-color: rgb(28, 28, 28);
      }

    //   @media (min-width: @sidebar-thr) {
        display: block;
    //   }

      border-radius: 0;
      border-top: 0;
      border-left: 0;
      border-bottom: 0;

      // position: relative;
    }

    a {
      color: var(--text-color-alt);

      &:hover {
        color: var(--text-color);
      }
    }
</style>

<script>
    const sidebar = document.getElementById("sidebar");
    if (sidebar !== null) {
        document.getElementById("sidebar-button")?.addEventListener("click", () => {
            if (sidebar.classList.contains("hidden")) {
                sidebar.classList.remove("hidden")
            } else {
                sidebar.classList.add("hidden");
            }
        })
    }
</script>
