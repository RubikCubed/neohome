---
import Project from "./Project.astro";

import type { Props as PProps } from "./Project.astro";

const projects: PProps[] = [
    {
        name: "nh",
        longDesc: `
            Rust-rewrite of system administration tools for the NixOS ecosystem.
        `,
        link: "https://github.com/viperML/nh",
    },
    {
        name: "wrapper-manager",
        longDesc: `
            Framework for declarative configuration of application with wrapper
            scripts.
        `,
        link: "https://github.com/viperML/wrapper-manager",
    },
    {
        name: "noshell",
        longDesc: `
            Shim that loads a login shell selected by the user, even if not
            present in /etc/shells.
        `,
        link: "https://github.com/viperML/noshell"
    },
    {
        name: "neoinfra",
        longDesc: `
            Configuration for my servers, with Terraform, Cloudlfare, Nginx,
            NixOS and others.
        `,
        link: "https://github.com/viperML/neoinfra"
    },
];
---

<h2>Projects</h2>

<div id="projects">
    {
        projects.map((proj) => {
            return <Project {...proj} />;
        })
    }
</div>

<style lang="less">
    h2 {
        margin: 8px;
        margin-bottom: 10px;
    }

    #projects {
        display: grid;
        grid-template-columns: 1fr 1fr;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 3rem;
    }
</style>
