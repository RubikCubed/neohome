---
interface Props {
    class?: string;
    file?: string;
}

const { class: className, file } = Astro.props;

const date = new Date();

const commit: string | undefined = import.meta.env.GIT_COMMIT;

const branch = "astro";
const baseUrlShort = "viperML/neohome";
const baseUrl = `https://github.com/${baseUrlShort}`;

const ref = (() => {
    if (commit !== undefined) {
        return commit;
    } else {
        return "astro";
    }
})();

const url =
    baseUrl +
    (() => {
        if (file === undefined) {
            return `/tree/${ref}`;
        } else {
            return `/blob/${ref}/${file}`;
        }
    })();

const urlShort =
    baseUrlShort +
    (() => {
        if (file !== undefined) {
            return `:${file}`;
        } else {
            return "";
        }
    })() +
    (() => {
        if (commit !== undefined) {
            return ` @ ${commit.substring(0, 7)}`;
        } else {
            return "";
        }
    })();
---

