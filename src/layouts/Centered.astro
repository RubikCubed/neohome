---
import Base from "./Base.astro";

const { frontmatter } = Astro.props;

const title = (() => {
    if (frontmatter?.title !== undefined) {
        return `${frontmatter.title} - ayats.org`;
    } else {
        return "ayats.org";
    }
})();
---

<Base>
    <title slot="head">{title}</title>

    <section class="flex flex-col main-container">
        <slot />
    </section>
</Base>
