---
import { Image } from "astro:assets";

interface Props {
    class?: string;
    file?: string;
}

import icon from "./dark-theme-svgrepo-com.svg";

const { class: className, file } = Astro.props;

const date = new Date();

const commit: string | undefined = import.meta.env.GIT_COMMIT;

const branch = "astro";
const baseUrlShort = "viperML/neohome";
const baseUrl = `https://github.com/${baseUrlShort}`;

const ref = (() => {
    if (commit !== undefined) {
        return commit;
    } else {
        return "astro";
    }
})();

const url =
    baseUrl +
    (() => {
        if (file === undefined) {
            return `/tree/${ref}`;
        } else {
            return `/blob/${ref}/${file}`;
        }
    })();

const urlShort =
    baseUrlShort +
    (() => {
        if (file !== undefined) {
            return `:${file}`;
        } else {
            return "";
        }
    })() +
    (() => {
        if (commit !== undefined) {
            return ` @ ${commit.substring(0, 7)}`;
        } else {
            return "";
        }
    })();
---

<footer class:list={[className]}>
    <p id="footer-copy">
        Posts Â© {date.getFullYear()} Fernando Ayats under <a
            href="https://creativecommons.org/licenses/by-nc-sa/4.0/"
            >CC-BY-NC-SA 4.0</a
        >
    </p>
    <p id="footer-provenance">
        Built with <a href="https://astro.build">Astro</a> from <a
            class="footer-break"
            href={url}>{urlShort}</a
        >
    </p>
    <button class="hover-filter" id="themeToggle">
        <Image src={icon} alt="Change theme" id="theme-icon" />
    </button>
</footer>

<style lang="less">
    footer {
        margin-top: 3rem;
        display: grid;
        width: 100%;
        grid-template-rows: auto;
        gap: 0.3rem 3rem;

        padding: 10px 20px;
        @media (min-width: 768px) {
            padding: 0;
        }
    }

    .footer-break {
        word-break: break-all;
    }

    a {
        text-decoration: underline;

        // &:hover {
        //     color: var(--text-color-alt);
        // }
    }

    @media (min-width: 768px) {
        footer {
            grid-template-columns: auto max-content;
        }

        #footer-copy {
            grid-column: 1;
            grid-row: 1;
        }

        #footer-provenance {
            grid-column: 1;
            grid-row: 2;
        }

        #footer-btn {
            grid-row: 1 / 3;
            grid-column: 2;
        }
    }

    #theme-icon {
        width: 30px;
        filter: opacity(80%);

        :is(.dark &) {
            filter: invert(100%);
            transform: scaleX(-1);
        }
    }
</style>
