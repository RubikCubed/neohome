<style>
    .box {
        box-sizing: border-box;
        padding: 20px;
        border: 4px solid rgb(68, 68, 68);
        border-radius: 10px;
        gap: 10px;

        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .webring-control {
        display: flex;
        flex-direction: row;
        padding: 10px 0;
        gap: 10px;

        & a {
            border-radius: 6px;
            background-color: var(--elem-neutral);
            padding: 10px;
        }
    }
