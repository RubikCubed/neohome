---
import { Image } from "astro:assets";
import logo from "../img/avatar-text.svg";
const { class: className } = Astro.props;
---

<header class:list={["flex justify-center", className]}>
  <nav class="py-2 px-4 flex-auto flex justify-between items-center">
    <a href="/" class="logo">
      <Image src={logo} alt="Site logo." />
    </a>
    <ul class="flex gap-4">
      {
        (() => {
          if (import.meta.env.DEV === true) {
            return <a href="/test">Test Page</a>;
          }
        })()
      }
      <a href="/blog/">Blog</a>
      <!-- <a id="themeToggle">Theme</a> -->
    </ul>
  </nav>
</header>

<style>
  header {
    width: 100vw;
    top: 0;
    z-index: 100;
    position: sticky;
    font-weight: 600;
    /* background-color: red; */
  }

  nav {
    /* background-color: rgb(137, 137, 137); */
  }

  .logo {
    width: 150px;
  }
</style>
